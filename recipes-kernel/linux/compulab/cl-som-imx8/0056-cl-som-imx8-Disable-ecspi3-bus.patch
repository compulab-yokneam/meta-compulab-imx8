From 539a5ff449729414cb5977d1ea418562de55e9cf Mon Sep 17 00:00:00 2001
From: Valentin Raevsky <valentin@compulab.co.il>
Date: Tue, 13 Feb 2018 17:01:05 +0200
Subject: [PATCH 56/61] cl-som-imx8: Disable ecspi3 bus.

Disable ecspi3 bus.
1) touchscreen is not shipped yet.

Signed-off-by: Valentin Raevsky <valentin@compulab.co.il>
---
 arch/arm64/boot/dts/compulab/cl-som-imx8.dts | 4 ++--
 1 file changed, 2 insertions(+), 2 deletions(-)

diff --git a/arch/arm64/boot/dts/compulab/cl-som-imx8.dts b/arch/arm64/boot/dts/compulab/cl-som-imx8.dts
index 4258ed2..af4b9c4 100644
--- a/arch/arm64/boot/dts/compulab/cl-som-imx8.dts
+++ b/arch/arm64/boot/dts/compulab/cl-som-imx8.dts
@@ -588,7 +588,7 @@
 	status = "okay";
 };
 
-&uart1 { /* console */
+&uart1 { /* rs-485 */
 	pinctrl-names = "default";
 	pinctrl-0 = <&pinctrl_uart1_rs485_hdx>;
 	assigned-clocks = <&clk IMX8MQ_CLK_UART1_SRC>;
@@ -630,7 +630,7 @@
 	cs-gpios = <&gpio5 25 0>;
 	pinctrl-names = "default";
 	pinctrl-0 = <&pinctrl_ecspi3>;
-	status = "okay";
+	status = "disabled";
 
 	touch:	tsc2046@0 {
 		compatible = "ti,tsc2046";
-- 
